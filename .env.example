# ----------------------------------------------------------------------------
# Supabase Configuration
# ----------------------------------------------------------------------------
# Get these from: Supabase Dashboard → Settings → API
# Project URL: https://xxxxx.supabase.co
VITE_SUPABASE_URL="supabase_url"
# Anon/Public Key: Safe to expose in frontend (Row-Level Security protects data)
VITE_SUPABASE_ANON_KEY="supabase_anon_key"

# ----------------------------------------------------------------------------
# Authentication & Security
# ----------------------------------------------------------------------------
VITE_TURNSTILE_SITE_KEY="turnstile_key"
VITE_TURNSTILE_SECRET_KEY="turnstile_secret_key"

# ----------------------------------------------------------------------------
# External APIs
# ----------------------------------------------------------------------------

# TMDB Proxy - Cloudflare Worker proxy to bypass TMDB access issues
VITE_TMDB_PROXY_URL="tmdb_proxy_url"

# ----------------------------------------------------------------------------
# Provider API
# ----------------------------------------------------------------------------
# Local Env
 VITE_VIDNINJA_API_URL="http://127.0.0.1:8787"
# Production Env
# VITE_VIDNINJA_API_URL="backend_url"


# ----------------------------------------------------------------------------
# Proxy Setup
# ----------------------------------------------------------------------------
# CORS_PROXY_URL="cors_proxy_url"
# M3U8_PROXY_URL="m3u8_proxy_url"

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
APP_DOMAIN="http://localhost:5173"

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_PREMIUM="true"

# ----------------------------------------------------------------------------
# Subtitle
# ----------------------------------------------------------------------------
OPENSEARCH_ENABLED="true"

# ----------------------------------------------------------------------------
# Analytics (Umami)
# ----------------------------------------------------------------------------
VITE_UMAMI_WEBSITE_ID="analytics_id"
VITE_UMAMI_SCRIPT_URL="analytics_script_url"
VITE_UMAMI_SCRIPT_URL_FALLBACK="analytics_script_url_fallback"

